{
  "name": "monorepo-boilerplate",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "pnpm": {
    "overrides": {
      "next": "16.1.1"
    }
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@project/web",
    "dev:mobile": "turbo run dev --filter=@project/mobile",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset",
    "db:types": "supabase gen types --local > packages/@project/db/src/types/supabase.ts",
    "db:push": "supabase db push",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "turbo": "^2.7.4",
    "typescript": "^5"
  }
}
